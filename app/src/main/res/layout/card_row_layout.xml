<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_marginTop="4dp"
    android:layout_marginBottom="4dp"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_marginTop="2dp"
        android:layout_marginBottom="2dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/listproduct_img"
            android:layout_weight="2"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <LinearLayout
            android:layout_marginLeft="6dp"
            android:orientation="vertical"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:textStyle="bold"
                android:text="Products Name"
                android:id="@+id/listproduct_name"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
            <TextView
                android:textSize="15dp"
                android:textColor="#de1212"
                android:id="@+id/listproduct_price"
                android:text="Products Price"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
            <LinearLayout
                android:layout_marginTop="16dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <ImageButton
                    android:id="@+id/decreasebtn"
                    android:src="@drawable/ic_remove"
                    android:layout_width="38dp"
                    android:layout_height="28dp" />
                <TextView
                    android:textStyle="bold"
                    android:gravity="center"
                    android:text="1"
                    android:id="@+id/listproduct_quantity"
                    android:layout_width="38dp"
                    android:layout_height="30dp" />
                <ImageButton
                    android:id="@+id/increasebtn"
                    android:src="@drawable/ic_add"
                    android:layout_width="38dp"
                    android:layout_height="30dp" />


            </LinearLayout>



        </LinearLayout>


    </LinearLayout>

</android.support.constraint.ConstraintLayout>