<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="45dp">
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="MARKET\nAPP"
            android:layout_marginTop="8dp"
            android:textAlignment="center"
            android:layout_weight="1"
            android:textStyle="bold"
            android:layout_marginLeft="2dp"
            android:textColor="@color/colorMain"/>
        <EditText
            android:layout_marginTop="9dp"
            android:layout_marginLeft="5dp"
            android:layout_width="0dp"
            android:layout_weight="4"
            android:background="@drawable/border"
            android:inputType="text"
            android:id="@+id/search_edit_frame"
            android:paddingLeft="10dp"
            android:paddingRight="30dp"
            android:gravity="center_vertical"
            android:layout_height="match_parent" />
        <LinearLayout
            android:layout_marginTop="9dp"
            android:layout_width="0dp"
            android:layout_weight="0.6"
            android:paddingLeft="10dp"
            android:layout_marginRight="5dp"
            android:background="@drawable/search_design"
            android:layout_height="match_parent">
            <ImageView
                android:layout_width="15dp"
                android:layout_height="match_parent"
                android:onClick="searchButtonPresssed"
                android:src="@drawable/search_button"/>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:paddingTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:background="@drawable/filter"
        android:id="@+id/option">
        <TextView
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:gravity="center"
            android:text="Liên quan"
            android:textColor="@color/colorBlack"
            android:textSize="16dp"
            android:onClick="related"
            android:id="@+id/related"
            android:layout_weight="1"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:gravity="center"
            android:text="Mới"
            android:textColor="@color/colorBlack"
            android:textSize="16dp"
            android:id="@+id/new_arrival"
            android:onClick="new_arrival"
            android:layout_weight="1"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:gravity="center"
            android:textColor="@color/colorBlack"
            android:id="@+id/rate"
            android:textSize="16dp"
            android:onClick="rate"
            android:text="Đánh giá"
            android:layout_weight="1.5"/>
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:textColor="@color/colorBlack"
                android:text="Giá"
                android:textSize="16dp"
                android:id="@+id/price"
                android:onClick="price"/>
            <ImageView
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_marginLeft="65dp"
                android:layout_marginTop="20dp"
                android:id="@+id/upordown"
                />
        </RelativeLayout>
    </LinearLayout>
    <ListView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/result_list">
    </ListView>
    <Button
        android:layout_width="90dp"
        android:layout_height="40dp"
        android:text="Xem thêm"
        android:textAllCaps="false"
        android:textColor="@color/colorBlack"
        android:background="@drawable/see_more"
        android:layout_gravity="center"/>
</LinearLayout>